<h1>Listing stocks</h1>

<table>
  <tr>
    <th>Symbol</th>
    <th>Company</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% count = 0%>
<% @stocks.each do |stock| %>
<% if count % 2 == 0 %>
  <tr bgcolor="cyan">
<% else %>
  <tr bgcolor="yellow">
<%
   end 
   count += 1 
%>
    <td><%= stock.symbol %></td>
    <td><%= stock.company %></td>
    <td><%= link_to 'Show', stock %></td>
    <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
    <td><%= link_to 'Destroy', stock, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

