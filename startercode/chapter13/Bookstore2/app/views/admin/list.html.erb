<style>* { text-align:center; margin: auto}</style>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<table border=1>
  <caption>Books</caption>
  <tr>
    <th>ID:</th><th>Title:</th><th>Author:</th>
    <th>Pages:</th><th>Price:</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.pages %></td>
      <td><%= book.price %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Index', action: 'index' %> |
<%= link_to 'Add Books', action: 'add' %> |
<%= link_to 'Highest Consting Book', action: 'compute' %>
