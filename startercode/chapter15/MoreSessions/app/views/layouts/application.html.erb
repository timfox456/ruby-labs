<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag "application",
      :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wholepage">
  <div id="header">SESSIONS</div>
  <div id="links">
    <% if session[:user_id] %>
      <%= link_to "Index", :action => "index" %> |
      <%= link_to "Logout", :action => "logout" %>
    <% else %>
      <%= link_to "Login", :action => "login" %> |
      <%= link_to "Register",:action => "register" %>
    <% end %>
  </div>
  <% if flash[:notice] %>
    <div id="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <div id="content"><%= yield %></div>
</div>
</body>
</html>
